{
  "manifest_version": 3,
  "version": "0.1",

  "short_name": "❤ ️Ducktor",
  "name": "❤ ️Ducktor",
  "description": "Quack quack",
  "icons": {
    "128": "ducks/DuckOn.png"
  },

  "action": {
    "default_popup": "index.html",
    "default_icon": "ducks/DuckOn.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle", 
      "js": ["image_filter.js"]
    },
    {
      "matches": ["https://www.google.com/search?q=*"],
      "run_at": "document_idle",
      "js": ["hideAndSeek.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["*.png"],
      "matches": [ "<all_urls>" ]
    }
  ],

  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ]
}